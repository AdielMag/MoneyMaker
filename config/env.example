# MoneyMaker Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development  # development, staging, production

# =============================================================================
# GCP Configuration
# =============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# Polymarket API
# =============================================================================
POLYMARKET_API_KEY=your-polymarket-api-key
POLYMARKET_API_SECRET=your-polymarket-api-secret
POLYMARKET_WALLET_ADDRESS=0xYourWalletAddress
POLYMARKET_PRIVATE_KEY=your-wallet-private-key

# =============================================================================
# Gemini AI
# =============================================================================
GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# Feature Flags
# =============================================================================
REAL_MONEY_ENABLED=false
FAKE_MONEY_ENABLED=true

# =============================================================================
# Trading Configuration (Override config.yaml)
# =============================================================================
# MIN_BALANCE_TO_TRADE=10.0
# MAX_BET_AMOUNT=50.0
# MAX_POSITIONS=10
# STOP_LOSS_PERCENT=-15
# TAKE_PROFIT_PERCENT=30

# =============================================================================
# Market Filters (Override config.yaml)
# =============================================================================
# MIN_VOLUME=1000
# MAX_TIME_TO_RESOLUTION_HOURS=1
# MIN_LIQUIDITY=500

# =============================================================================
# AI Configuration (Override config.yaml)
# =============================================================================
# AI_MODEL=gemini-1.5-pro
# AI_MAX_SUGGESTIONS=5
# AI_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
